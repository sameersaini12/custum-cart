
    <div class="home">
        <img
        class="home_image"
        src="https://images.unsplash.com/photo-1523821741446-edb2b68bb7a0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1050&q=80"
        alt="" 
        />
        <div class="home-row">
            <% products.forEach(function(product) {  %>
        <div class="product">
            <img class="product-image" src="<%= product.image %>" alt="" />
            <div class="product_info">
                <div style="font-size: 17px; color: gray;"><%= product.title %></div>
                <div class="product_price">
                    <div class="price_value" style="font-weight: 700; font-size: 19px;">Rs. <%= product.price %></div>
                    <button style="color: white; background-color: orange; border: none; border-radius: 2px; width: 40px;" class="rate_button"><%= product.rating %></button>
                </div>
            </div>
            <div class="middle">
                <form method="GET" action="/product/<%= product._id %>">
                    <button style="background-color: orange; border:none; height: 50px; width: 100px; color: white; border-radius: 4px; cursor: pointer;" class="middle-button">Explore</button>
                </form>
            </div>
        </div>
        <% }) %>
    </div>
    </div>
